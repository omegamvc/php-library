{
    "name": "omegamvc/php-library",
    "description": "library to build php mvc",
    "keywords": [
        "framework",
        "php-mvc",
        "php-library"
    ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Adriano Giovannini",
            "email": "agisoftt@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "php-di/php-di": "^7.0.0",
        "wixel/gump": "^v2.2.0"
    },
    "autoload": {
        "psr-4": {
            "Omega\\": "src/Omega/"
        },
        "files": [
            "src/Omega/Collection/helper.php",
            "src/Omega/Console/helper.php",
            "src/Omega/Integrate/helper.php",
            "src/Omega/Text/helper.php",
            "src/Omega/Time/helper.php",
            "src/Omega/Validator/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/Tests/"
        },
        "files": [
            "tests/Tests/Database/AbstractDatabaseTest.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "php-cs-fixer fix -v",
        "test:refacto": "rector --dry-run",
        "test:lint": "php-cs-fixer fix -v --dry-run --diff",
        "test:types": "phpstan analyse --ansi --memory-limit=-1 --debug",
        "test:unit": "phpunit --testdox --exclude-group database,not-for-mysql5.7",
        "test:release": "php ./bin/split-repo.php validate",
        "test:dev": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit",
            "@test:release"
        ],
        "test": [
            "rector --dry-run",
            "php-cs-fixer fix -v --dry-run",
            "phpstan analyse --ansi --memory-limit=-1",
            "phpunit --exclude-group database,not-for-mysql5.7",
            "php ./bin/split-repo.php validate"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
